/* pages/HomePage/HomePage.wxss */
.HomePage-container{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.HomePage-container .HomePage-top{
  height: 95rpx;
  border-top: 1rpx solid #EBEBEB; 
  display: flex;
  align-items: center;
}
.HomePage-container .HomePage-top .location{
  width: 142rpx;
  padding: 0 20rpx;
  height: 95rpx;
  display: flex;
  align-items: center;
}
.HomePage-top .location .location-image{
  width: 45rpx;
  height: 41rpx;
  margin-right: 11rpx
}
.HomePage-top .location>text{
  width: 82rpx;
  overflow: hidden;
  white-space:nowrap;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:300;
  color:rgba(102,102,102,1);
}
.HomePage-top .search{
  flex: 1;
}
.HomePage-top .search .form{
  display: flex;
  border-radius: 10rpx;
  align-items: center;
  width: 550rpx;
  height: 76rpx;
  background: #F0F4F7;
}
.search .form .input-text{
  margin-left: 26rpx;
  height: 76rpx;
  width: 460rpx;
  font-size: 30rpx;
}
.search .form .button{
  margin-left: 10rpx;
  width: 36rpx;
  height: 36rpx;
}
.HomePage-container .HomePage-bottom{
  flex: 1;
  display: flex;
}
.HomePage-container .HomePage-bottom .bottom-menu{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1rpx solid #E2E2E2;
  width: 160rpx;
  background: #F0F4F7;
}
.bottom-menu .li{
  height: 90rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font: 26rpx '';
  color: #666666;
}
.bottom-menu .te{
  background:#fff;
  color: #000;
}
.bottom-menu .te text{
  width: 153rpx;
  text-align: center;
  border-left: 8rpx solid #26A6FE;

}
.HomePage-container .HomePage-bottom .bottom-content{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  /* align-items: center; */
}
.bottom-content .content-option{
  height: 88rpx;
  display: flex;
}
.bottom-content .content-option .option-yizho{
  padding-left:20rpx;
  width: 294rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.option-yizho .week{
  width: 140rpx;
  height: 52rpx;
  border: 2rpx solid #CCCCCC;
  font:24rpx/52rpx "";
  color: #999999;
  text-align: center;
  border-radius: 10rpx;
}
.option-yizho .te{
  border: 2rpx solid #1889E5;
  color: #1889E5;
}
.option-Varieties{
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 142rpx;
}
.option-Varieties text{
  font-size: 24rpx;
  color: #999999;
}
.option-Varieties .text{
  color: #0096FF;
}
.option-Varieties image{
  margin: 0 10rpx;
  width: 28rpx;
  height: 24rpx;
}
.content-water{
  border-top: 1rpx solid #EBEBEB;
  border-bottom: 8rpx solid #EBEBEB;
  margin-bottom: 23rpx;
  height: 230rpx;
  width: 526rpx;
  padding-right: 30rpx;
  padding-top: 18rpx;
  display: flex;
  overflow-x: auto;
}
.content-water .chart1{
  /* flex-basis: 165rpx;
  flex-shrink: 0; */
  flex: 0 0 165rpx;
  margin: 0 9rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content-water .chart1 .chart{
  width: 165rpx;
  height: 163rpx;
}
.content-water .chart1 text{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:60rpx;
}
.content-chart{
  width: 550rpx;
  margin-bottom:32rpx;
}
.content-chart .slide-image{
  width: 550rpx;
}
.content-product{
  flex: 1;
  padding-top: 24rpx;
  display: flex;
  flex-direction: column;
  border-top: 1rpx dashed #BFBFBF;
}
.content-product .product{
  height: 192rpx;
  width: 550rpx;
  display: flex;
  margin-bottom: 24rpx;
  border-bottom: 1rpx dashed #BFBFBF;
}
.content-product .product .chart{
  width: 160rpx;
  height: 160rpx;
  background: #6f8;
  border-radius: 10rpx;
}
.content-product .product .product-information{
  flex: 1;
  padding-left:24rpx; 
  display: flex;
  flex-direction: column;
}
.product-information .Text{
  height: 30rpx;
  font-size:30rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(0,0,0,1);
  margin-bottom: 17rpx;
}
.product-information .text{
  height: 60rpx;
  font-size: 24rpx;
  font-weight:300;
  color: #888;
}
.product-information .information-score{
  flex: 1;
  display: flex;
  align-items: center;
}
.product-information .information-score .score{
  display: flex;
  width: 238rpx;
}
.score .img{
  width: 23rpx;
  height: 23rpx;
}
.product-information .information-score .position{
  flex: 1;
  display: flex;
  
}
.position .imge{
  margin-right: 14rpx;
  width: 24rpx;
  height: 28rpx;
}
.position text{
  color: #888;
  font-size: 24rpx;
  font-weight:300;
}