/* pages/My/My.wxss */
.My-container{
  position: relative;
  z-index: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f0f4f7;
  height: 100%;
}
.My-container .My-HeadPortrait{
  padding: 44rpx 40rpx 40rpx 37rpx;
  position: relative;
  display: flex;
  width: 673rpx;
  justify-content: space-between;
}
.My-container .My-HeadPortrait>.img{
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 325rpx;
}
.My-container .My-HeadPortrait .Name{
  display: flex;
}
.My-container .My-HeadPortrait .Name>.img{
  width: 134rpx;
  height: 134rpx;
  border: 1rpx solid #fff;
  border-radius: 50%;
}
.My-container .My-HeadPortrait .Name .user{
  margin-left: 24rpx;
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
}
.My-container .My-HeadPortrait .Name .user>text{
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.My-container .My-HeadPortrait .Name .user .ID{
  font-family:PingFang SC;
  margin-top: 16rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.My-container .My-HeadPortrait .Welfare{
  margin: 0;
  padding: 0;
  width: 167rpx;
  height: 45rpx;
  margin-top: 37rpx;
  background:linear-gradient(0deg,rgba(229,180,0,1),rgba(255,221,1,1));
  text-align: center;
  font-weight:500;
  font-size:20rpx;
  border-radius: 23rpx;
  color:rgba(102,70,0,1);
  line-height:45rpx;
}
.My-container .Integral{
  width: 690rpx;
  height: 170rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
}
.My-container .Integral .integral,.My-container .Integral .welfare{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  margin: 44rpx 0 48rpx 0;
}
.My-container .Integral .integral text:nth-child(1),.My-container .Integral .welfare text:nth-child(1){
  font-weight:300;
  color:rgba(102,102,102,1);
}
.My-container .Integral .integral text:nth-child(2),.My-container .Integral .welfare text:nth-child(2){
  margin-top: 22rpx;
  font-size:38rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,183,117,1);
}
.My-container .Integral .integral{
 border-right: 1rpx solid #E4E4E4;
}

.My-container .option{
  margin-top: 30rpx; 
  display: flex;
  flex-direction: column;
  width: 690rpx;
  background: #fff;
  border-radius: 20rpx;
}
.My-container .option .li{
  display: flex;
  height: 105rpx;
  margin-left: 30rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #e1e5e7;
}
.My-container .option .feedback{
  border: 0;
}
.My-container .option .li .text{
  display: flex;
}
.My-container .option .li .text .img{
  width: 48rpx;
  height: 42rpx;
}
.My-container .option .li .text text{
  margin-left: 32rpx;
  font-size:30rpx;
  font-family:Microsoft YaHei;
  font-weight:300;
  color:rgba(1,1,1,1);
}
.My-container .option .li>.imgs{
  margin-right: 29rpx;
  width: 15rpx;
  height: 27rpx;
}